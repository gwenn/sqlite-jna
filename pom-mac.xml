<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.sqlite</groupId>
  <artifactId>sqlite-jni</artifactId>
  <packaging>dylib</packaging>
  <version>0.1.0</version>
  <name>SQLite JNI binding</name>
  <description>JDBC Driver for SQLite using JNI</description>
  <url>https://github.com/gwenn/sqlite-jna</url>

  <licenses>
    <license>
      <name>Public domain</name>
      <url>http://unlicense.org/</url>
      <distribution>manual</distribution>
    </license>
  </licenses>

  <issueManagement>
    <system>github</system>
    <url>https://github.com/gwenn/sqlite-jna/issues</url>
  </issueManagement>

  <scm>
    <connection>scm:git:https://github.com/gwenn/sqlite-jna.git</connection>
    <developerConnection>scm:git:git@github.com:gwenn/sqlite-jna.git</developerConnection>
    <tag>HEAD</tag>
    <url>https://github.com/gwenn/sqlite-jna</url>
  </scm>

  <properties>
    <java.version>1.7</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <build>
    <testSourceDirectory>src/test/native</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>native-maven-plugin</artifactId>
        <version>1.0-alpha-8</version>
        <extensions>true</extensions>
        <configuration>
          <attach>false</attach>
          <javahClassNames>
            <javahClassName>org.sqlite.SQLite</javahClassName>
          </javahClassNames>
          <javahOutputFileName>sqlite_jni.h</javahOutputFileName>
          <javahOS>darwin</javahOS>
          <sources>
            <source>
              <directory>src/main/native</directory>
              <fileNames>
                <fileName>sqlite_jni.c</fileName>
              </fileNames>
            </source>
            <source>
              <directory>/usr/local/opt/sqlite/include</directory>
            </source>
          </sources>
          <compilerEndOptions>
            <compilerEndOption>-O2</compilerEndOption>
          </compilerEndOptions>
          <linkerFinalName>libsqlite_jni</linkerFinalName>
          <linkerStartOptions>
            <linkerStartOption>-I/usr/local/opt/sqlite/include</linkerStartOption>
            <linkerStartOption>-L/usr/local/opt/sqlite/lib</linkerStartOption>
          </linkerStartOptions>
          <linkerEndOptions>
            <linkerEndOption>-lsqlite3</linkerEndOption>
            <linkerEndOption>-O2</linkerEndOption>
            <linkerEndOption>-dynamiclib</linkerEndOption>
          </linkerEndOptions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
